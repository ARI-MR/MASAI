{
  "host":"http://localhost:8080",
  "in":[
    {
      "id":"Room.*",
      "type":"Room",
      "isPattern":true,
      "providers":[
        "http://localhost:8081"
      ],
      "attributes":[
        {
          "name":"temperature",
          "type":"double",
          "metadata":[
            {
              "name":"unit",
              "type":"string"
            }
          ]
        },
        {
          "name":"floor",
          "type":"string"
        }
      ]
    }
  ],
  "out":[
    {
      "id":"floor.*",
      "type":"Floor",
      "brokers":[
        {
          "url":"http://localhost:8081"
        }
      ],
      "attributes":[
        {
          "name":"temperature",
          "type":"double",
          "metadata":[
            {
              "name":"unit",
              "type":"string"
            }
          ]
        }
      ]
    }
  ],
  "statements":[
    "INSERT INTO Floor SELECT floor as id, avg(temperature) as temperature, temperature_unit FROM Room.win:time(10 minutes) group by floor  output after 10 sec last every 10 sec"
  ]
}

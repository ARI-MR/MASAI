<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d [%.15thread] %-5level %logger{10} - %msg%n</Pattern>
        </encoder>
    </appender>
    <root level="${log-level:-INFO}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
